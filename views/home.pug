doctype html
html
  head
    title #{title}
    style.
      body {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-color: #333333;
        background-image: url('background.jpg');
        background-size: cover; 
        background-position: center; 
        background-repeat: no-repeat; 
        background-color: #333333; 
        font-family: 'Courier New', Courier, monospace;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      .container {
        width: 420px;
        background-color: #292828;
        color: white;
        border-radius: 10px;
        padding: 30px 40px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
      }

      h1 {
        font-size: 36px;
        text-align: center;
        margin-top: 50px;
      }

      .btn {
        display: block;
        width: fit-content;
        margin: 10px auto;
        padding: 10px 20px;
        background-color: black;
        color: white;
        text-decoration: none;
        border: 2px solid black;
        border-radius: 5px;
        cursor: pointer;
      }

  body
    .container
      h1 #{title}
      a.btn(href='/login')
        | Login
      a.btn(href='/register')
        | Register
