doctype html
html
  head
    title Cart
    style.
      body {
        font-family: 'Courier New', Courier, monospace;
        margin: 0;
        padding: 0; 
        background-color: #333333; 
        color: white; 
      }
      button {
        background-color: #ff3333; 
        color: white; 
      }

  body(style="font-family: Arial, sans-serif; margin: 0; padding: 0; background-color: #333333;") 
    h1(style="text-align: center; margin-top: 50px; color: white;") Shopping Cart
    if cart && cart.length > 0
      ul(style="list-style: none; padding: 0;")
        each item in cart
          li(style='margin-bottom: 20px; padding: 10px; border: 1px solid #ccc; color: white;') 
            img(src=item.picture_url alt=item.title style='max-width: 100px; margin-right: 20px; display: inline-block; vertical-align: top;')
            div(style='display: inline-block; vertical-align: top; color: white;') 
              h2= item.title
              p Description: #{item.description}
              p Price: #{item.price}
            
              form(action="/remove-from-cart" method="post" style='margin-top: 10px;')
                input(type="hidden" name="mangaId" value=item.myanimelist_id)
                button(type="submit" style="padding: 5px 10px; border: 1px solid #333; background-color: #ff3333; border-radius: 5px; cursor: pointer; color: white;") Remove

      
      div(style='margin-top: 20px; text-align: center;')
        h2 Summary
        p Total Price: $#{totalPrice.toFixed(2)}
        a(href="/checkout" style="display: inline-block; margin-top: 10px; padding: 5px 10px; border: 1px solid #333; background-color: #ddd; border-radius: 5px; text-decoration: none; color: #333; cursor: pointer;")
          | Proceed to Checkout
    else
      p(style="text-align: center; color: white;") Your cart is empty.
